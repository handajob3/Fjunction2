<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.design.widget.CollapsingToolbarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbar">

</android.support.design.widget.CollapsingToolbarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/coverpic"
            android:background="@drawable/search"/>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_marginLeft="-80dp"
            android:layout_gravity="end"
            android:layout_height="80dp">
            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/editprofile"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#f24a47"
                android:layout_gravity="center"
                android:text="Edit Profile"/>
        </LinearLayout>
    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/aman"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"/>



    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_marginTop="-30dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true">

        <com.owater.library.CircleTextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="#ffffff"
            app:ct_border_width="1dp"
            android:layout_marginLeft="10dp"
            app:ct_border_color="#000000"
            app:ct_type="shadow_alpha"
            android:gravity="center"
            android:textSize="30dp"
            app:ct_backgroundColor="#f24a47"
            android:text="999"/>

        <com.owater.library.CircleTextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="140dp"
            android:gravity="center"
            app:ct_border_width="1dp"
            app:ct_border_color="#000000"
            app:ct_type="shadow_alpha"
            app:ct_backgroundColor="#f24a47"
            android:text="999"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previews"
            android:textSize="20dp"
            android:layout_marginLeft="-300dp"
            android:textColor="#f24a47"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:textSize="20dp"
            android:textColor="#f24a47"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/user"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:inputType="textPersonName"
            android:textColorHint="#f24a47"
            android:textColor="#f24a47"
            android:textSize="16dp"
            android:textStyle="bold"
            android:backgroundTint="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-25dp"
            android:text="Aman Handa"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="-7dp"
            android:background="@drawable/proline"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/email"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:inputType="textEmailAddress"
            android:textColorHint="#f24a47"
            android:textColor="#f24a47"
            android:textSize="16dp"
            android:textStyle="bold"
            android:backgroundTint="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-25dp"
            android:id="@+id/showemail"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="-7dp"
            android:background="@drawable/proline"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/contact"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:inputType="phone"
            android:textColorHint="#f24a47"
            android:textColor="#f24a47"
            android:textSize="16dp"
            android:textStyle="bold"
            android:backgroundTint="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-25dp"
            android:text="8591244100"
            android:id="@+id/showphone"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="-7dp"
            android:background="@drawable/proline"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/user"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:inputType="text"
            android:textColorHint="#f24a47"
            android:textColor="#f24a47"
            android:textSize="16dp"
            android:textStyle="bold"
            android:backgroundTint="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-25dp"
            android:text="Male"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="-7dp"
            android:background="@drawable/proline"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/user"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:inputType="date"
            android:textColorHint="#f24a47"
            android:textColor="#f24a47"
            android:textSize="16dp"
            android:textStyle="bold"
            android:backgroundTint="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-25dp"
            android:text="15/02/1992"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="-7dp"
            android:background="@drawable/proline"/>
    </LinearLayout>

</LinearLayout>



</android.support.design.widget.CoordinatorLayout>